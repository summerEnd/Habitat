<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sumauto.habitat"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".HabitatApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoadingActivity" android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">
        </activity>
        <activity android:name=".activity.SearchActivity">
        </activity>
        <activity
            android:name=".activity.AddressBookActivity"
            android:label="@string/address_book">
        </activity>
        <activity android:name=".activity.TrendDetailActivity">
        </activity>
        <activity
            android:name=".activity.PublishActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".activity.NoticeFriendListActivity"
            android:label="@string/notice_who_see">
        </activity>
        <activity android:name=".activity.UserCenterActivity">
        </activity>
        <activity android:name=".activity.EditUserInfoActivity">
        </activity>
        <activity android:name=".activity.PhotoActivity">
        </activity>
        <activity android:name=".activity.RegisterActivity">
        </activity>
        <activity android:name=".activity.LoginActivity">
        </activity>
        <activity android:name=".activity.ForgetPassword">
        </activity>
    </application>

</manifest>

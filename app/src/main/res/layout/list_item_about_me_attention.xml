<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_13"
    android:paddingLeft="@dimen/dimen_13"
    android:paddingRight="@dimen/dimen_13"
    android:paddingTop="@dimen/dimen_13">

    <com.sumauto.habitat.widget.AvatarView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dimen_41"
        android:layout_height="@dimen/dimen_41"
        android:src="@drawable/test_image_01"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_13"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一地鸡哈哈哈哈毛"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_15"/>

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="关注了我"
                android:textColor="@color/textGray"
                android:textSize="@dimen/text_13"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_2"
            android:text="12分钟前"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_12"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.sumauto.widget.CheckableLinearLayout
            android:id="@+id/btn_attention"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_26"
            android:background="@drawable/btn_attention_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dimen_13"
            android:paddingRight="@dimen/dimen_13">

            <CheckedTextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="center"
                android:text="@string/attention"
                android:textColor="@color/btn_attention_text_color"
                android:textSize="@dimen/text_12"/>
        </com.sumauto.widget.CheckableLinearLayout>

        <com.sumauto.widget.RoundCornerImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/avatarSize"
            android:layout_height="@dimen/avatarSize"
            android:src="@drawable/test_image_01"
            app:x_radius="@dimen/round_corner_avatar"
            app:y_radius="@dimen/round_corner_avatar"/>
    </FrameLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dimen_13"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingBottom="@dimen/dimen_10"
    android:background="@color/white"
    android:paddingRight="@dimen/dimen_33"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.sumauto.habitat.widget.AvatarView
        android:src="@drawable/test_image_01"
        android:layout_width="@dimen/dimen_41"
        android:layout_height="@dimen/dimen_41"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dimen_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘻哈小萌"
                android:textColor="@color/textBlack"/>
            <TextView
                android:layout_marginLeft="@dimen/dimen_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近浏览了 4 篇文章"
                android:textColor="#666666"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25分钟"
            android:textColor="#999999"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            app:layoutManager="GridLayoutManager"
            tools:listitem="@layout/grid_item_avatar_nick"
            android:layout_height="wrap_content"
            android:id="@+id/rv_images"/>
    </LinearLayout>
</LinearLayout>
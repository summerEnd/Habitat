<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickable_white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10_in_xhdpi"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_13">

    <com.sumauto.habitat.widget.AvatarView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dimen_36"
        android:layout_height="@dimen/dimen_36"
        android:src="@drawable/test_image_01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10_in_xhdpi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_12"
            tools:text="Lincoln"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textGray"
            android:textSize="@dimen/text_9"
            tools:text="Lincoln"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10_in_xhdpi"
            tools:text="山东发生地方哈皮 u 说的废话阿福玩儿说的废话阿福玩儿说的废话阿福玩儿"
            android:textColor="#666666"
            android:textSize="@dimen/text_12"/>
    </LinearLayout>
</LinearLayout>
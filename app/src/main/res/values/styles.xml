<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/windowBackground</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:dialogTheme">@style/Theme_App_Dialog</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowBackground">@drawable/Translucent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme_App_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim_style</item>
    </style>

    <style name="dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>

    </style>

    <style name="main_tab_item">
        <item name="android:onClick">onTabClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_tab_item_image">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">@dimen/dimen_29</item>
        <item name="android:layout_height">@dimen/dimen_29</item>
    </style>

    <style name="horizontal_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="window_main_tab_select_item">
        <item name="android:background">@drawable/clicked_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_clickable</item>
        <item name="android:paddingBottom">@dimen/dimen_19</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_19</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="tabTextAppearanceSmal">
        <item name="android:textSize">@dimen/text_12</item>
    </style>
    <style name="titleTextAppearance">
        <item name="android:text">@string/app_name</item>
        <item name="android:id">@id/toolBar_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="title_back_button">
        <item name="android:id">@id/toolBar_back</item>
        <item name="android:text">@string/go_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:drawableLeft">@mipmap/ic_back</item>
        <item name="android:drawablePadding">@dimen/dimen_7</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="toolBarStyle">
        <item name="android:id">@id/toolBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_51</item>
        <item name="android:background">@drawable/titleBarBackground</item>
    </style>

    <style name="ios_dialog_item">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:textColor">@color/clickable_blue_text</item>
    </style>
</resources>

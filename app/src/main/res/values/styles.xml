<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/windowBackground</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:dialogTheme">@style/Theme_App_Dialog</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme_App_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim_style</item>
    </style>

    <style name="dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>

    </style>

    <style name="main_tab_item">
        <item name="android:paddingRight">@dimen/dp_10_in_xhdpi</item>
        <item name="android:paddingLeft">@dimen/dp_10_in_xhdpi</item>
        <item name="android:onClick">onTabClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_tab_item_image">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">@dimen/dimen_29</item>
        <item name="android:layout_height">@dimen/dimen_29</item>
    </style>

    <style name="horizontal_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="window_main_tab_select_item">
        <item name="android:background">@drawable/clickable_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_clickable</item>
        <item name="android:paddingBottom">@dimen/dimen_19</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_19</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="tabTextAppearanceSmal">
        <item name="android:textSize">@dimen/text_12</item>
    </style>
    <style name="toolbar_title_style">
        <item name="android:text">@string/app_name</item>
        <item name="android:id">@id/toolBar_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="toolbar_back_button">
        <item name="android:id">@id/toolBar_back</item>
        <item name="android:text">@string/go_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/dp_10_in_xhdpi</item>
        <item name="android:drawableLeft">@mipmap/ic_back</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="toolBarStyle">
        <item name="android:id">@id/toolBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbarHeight</item>
        <item name="android:background">@drawable/titleBarBackground</item>
    </style>

    <style name="toolBar_clickedItem">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/clickable_blue_text</item>
    </style>

    <style name="ios_dialog_item">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:textColor">@color/clickable_blue_text</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="center_info_text">
        <item name="android:paddingTop">@dimen/view_spacing_1</item>
        <item name="android:paddingBottom">@dimen/view_spacing_1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="mine_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/clickable_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_15</item>
    </style>

    <style name="mine_item_number">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="mine_item_type">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/view_spacing_2</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="mine_click_item">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/clickable_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/dimen_15</item>
        <item name="android:paddingLeft">@dimen/dimen_13</item>
        <item name="android:paddingRight">@dimen/dimen_15</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
    </style>

    <style name="mine_click_item_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mine_click_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/view_spacing_2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="mine_click_item_arrow">
        <item name="android:src">@mipmap/ic_clickable</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="complete_data_click_item">
        <item name="android:paddingRight">@dimen/click_item_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/click_item_vertical_spacing</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:background">@drawable/clickable_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="complete_data_text1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="complete_data_item_value">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:layout_marginRight">@dimen/dp_10_in_xhdpi</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_register_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/view_spacing_2</item>
        <item name="android:background">#0000</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textSize">@dimen/text_15</item>
    </style>

    <style name="register_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>


</resources>

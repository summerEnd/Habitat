<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/windowBackground</item>
    </style>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowBackground">@drawable/Translucent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_tab_item">
        <item name="android:onClick">onTabClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_tab_item_image">
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">@dimen/dimen_29</item>
        <item name="android:layout_height">@dimen/dimen_29</item>
    </style>

    <style name="horizontal_space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="horizontal_line">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="window_main_tab_select_item">
        <item name="android:background">@drawable/clicked_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/ic_clickable</item>
        <item name="android:paddingBottom">@dimen/dimen_19</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_19</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">@dimen/text_14</item>
    </style>
</resources>
